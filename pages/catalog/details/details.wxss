/* pages/catalog/details/details.wxss */
.icon-jikediancanicon06:before{content:"\e774";color:#999;}


page{
  width:100%;
  font-size:35rpx;
}
.container_index{
  width:100%;
  display:flex;
  flex-direction: column;
  background:#fff;
}
.header{
  flex:1;
  margin-bottom:110rpx;
}
.top{
  display: flex;
  flex-flow: row wrap;
}
.top_left{
  margin:40rpx 40rpx 20rpx 30rpx;
  border:1px solid #666;
  border-radius: 6rpx;
  height:35rpx;
  padding:10rpx 15rpx;
  font-size:26rpx ;
}
.top_right{
  width:75%;
  margin-top:35rpx;
}
.det_th{
  width:100%;
  border-bottom:1rpx solid #fff;
  padding:20rpx 30rpx;
  box-sizing:border-box;
}
.det_th>text{
  width:33.3%;
  display: inline-block;
  line-height:100rpx;
}
.det_th view{
  line-height:100rpx;
}
text.disc{
  display: inline-block;
  padding:30rpx 40rpx 10rpx 30rpx;
  font-size:40rpx;
  color:red;
  box-sizing:border-box;
}
.border_bottom{
  border-bottom:1px solid #f2f2f2;
  margin:0 20rpx;
}
view.pro{
  width:100%;
  text-align: center;
  box-sizing:border-box;
}
.pro view.pro_left{
  width:100%;
  border-bottom:1px solid #098AE8;
  padding:30rpx 0;
  color:#098AE8;
  box-sizing: border-box;
}

.pro_details{
  width:100%;
  padding:10rpx 0;
  box-sizing: border-box;
}
.pro_details>view{
  height:90rpx;
  width:100%;
  line-height:90rpx;
  padding:0 40rpx;
  border-bottom:1rpx solid #f5f5f5;
  font-size:32rpx;
  color:#b2b2b2;
}
.pro_details>view>text{
  padding-left:30rpx;
  color:#636363;
}


.bottom_cart{
  height:110rpx;
  width: 100%;
  position: fixed;
  display:flex;
  background:#fff;
  border-top:2rpx solid #ddd;
  box-sizing: border-box;
  bottom: 0rpx;
  justify-content: flex-end;
}
.bottom_cart button{
  margin:0;
  line-height:110rpx;
}
.bottom_cart button::after{
  border:none;
}
.address-add{
  width:37%;
  border-radius:0;
}

/*动画*/

.mask{
  position:fixed;
  height:100%;
  width:100%;
  background:rgba(0,0,0,0.1);
  z-index:10;
}
.carpop{
  position:fixed;
  height:720rpx;
  width:100%;
  background:#fff;
  bottom:0rpx;
  left:0;
  border-top-left-radius:40rpx;
  border-top-right-radius:40rpx;
  z-index:11;
}

.carpop icon{
  position:absolute;
  top:5rpx;
  right:10rpx;
  font-size:52rpx;
}
.carpop .sure{
  position:absolute;
  height:70rpx;
  width:100%;
  text-align:center;
  bottom:30rpx;
}
.carpop .btn{
  display:block;
  width:85%;
  background:#0075c1;
  border-radius:28rpx;
  line-height:70rpx;
  height:70rpx;
}
.carpop .btn::after{
  border:0;
}