/* pages/catalog/pay/pay.wxss */
page{
  background:#fff;
  font-size:30rpx;
}
.container_pay image{
  width:50rpx;
  height:50rpx;
}
.pay_top{
  text-align: center;
  margin:60rpx 0 ;
}
.pay_top view:nth-child(2){
  color:#0075C1;
  margin:20rpx 0 50rpx;
}
.pay_top view:nth-child(3){
  font-size:40rpx;
}
.pay_top view:last-child{
  text-decoration: line-through;
  color:#333;
}
.container_pay>view+view{
  border-bottom:1px solid #f2f2f2;
  margin:0 10rpx;
  padding:20rpx;
  font-size:26rpx;
  color:#6B6B6B;
}
.container_pay view.offer{
  color:red;
  font-size:25rpx;
}
.container_pay view.offer>text:first-child{
  padding-right: 70rpx;
}
.container_pay view.offer>text:last-child{
  float: right;
}
.container_pay view .pay_info{
  color:#333;
  margin-left:70rpx;
}
.container_pay view .pay_info.mg_more{
  margin-left:100rpx;
}
.service_star{
  text-align: center;
}
.service_star image{
  margin:10rpx 0;
}
.container_pay view.button_details{
  text-align: center;
  color:#fff;
  padding:35rpx 0;
  border-bottom:0;
 }
 .button_details text{
  padding:10rpx 100rpx;
    background:#0075C1;
    border-radius: 30rpx;
  
 }
.adver{
  position: fixed;
  bottom:0;

   width:100%; 
}
 .adver image{
   width:100%; 
  height:300rpx;
   
 }
