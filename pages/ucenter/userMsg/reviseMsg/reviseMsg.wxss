/* pages/ucenter/userMsg/reviseMsg/reviseMsg.wxss */
page{
  width:100%;
  height:auto;
}
.container{
  height:100%;
  width:100%;
  padding:10rpx 20rpx 30rpx;
  background:#f8f8f8;
}
form .title{
  line-height:85rpx;
  padding-left:20rpx;
  font-size:36rpx;
}
.section{
  display:flex;
  height:120rpx;
  padding:0 20rpx;
  line-height: 120rpx;
  background-color: #fff;
  box-sizing: border-box;
  align-items: center;
}
.section__title{
  margin-right:30rpx;
  font-size:36rpx;
  line-height:120rpx;
}
.content{
  padding:20rpx 0;
  background:#fff;
}
.section input{
  height:75rpx;
  width:468rpx;
  padding-left:15rpx;
  display:inline-block;
  border:1rpx solid #ddd;
  background-color: #fff;
}
.section .picker{
  display:flex;
  align-items: center;
  height:75rpx;
}
.section .picker text{
  display:inline-block;
  height:75rpx;
  width:198rpx;
  text-align:center;
  line-height: 75rpx;
  border:1rpx solid #ddd;
}
.section .picker text:first-child{
  margin-right:20rpx;
}
.pickerdate{
  width:423rpx;
  padding-left:20rpx;
  border:1rpx solid #ddd;
  box-sizing: border-box;
}
.keep button{
  height:90rpx;
  width:94%;
  margin:70rpx auto 70rpx;
  line-height: 90rpx;
  color:#fff;
  font-size:35trpx;
  letter-spacing:5rpx;
  text-align:center;
  border-radius:30rpx;
  background:#0075c1;
}
.keep button::after{
  border:none;
}
