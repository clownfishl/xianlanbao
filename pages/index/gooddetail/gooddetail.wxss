.long_title{
  display:flex;
  height:60rpx;
  padding:0 20rpx;
  font-size:30rpx;
  border-bottom:1rpx solid #f8f8fa;
  background:#f8f8fa;
  align-items: center;
  justify-content:space-around;
  box-sizing: border-box;
}
.long_title view{
  width:calc(100%/3);
  text-align:center;
}
.long_content{
  width:100%;
  padding:0 20rpx;
  box-sizing: border-box;
}
.long_list{
  display:flex;
  height:80rpx;
  font-size:32rpx;
  border-bottom:1rpx solid #f8f8fa;
  align-items: center;
  justify-content:space-around;
  box-sizing: border-box;
}
.long_list view{
  width:calc(100%/3);
  text-align:center;
}
.long_list view view{
  margin:0 auto;
}
.long_list view .select-pick{
  height:60rpx;
  width:134rpx;
  color:#fff;
  line-height: 60rpx;
  border-radius:16rpx;
  border:1rpx solid #f8f8fa;
  background:#4997d3;
}
