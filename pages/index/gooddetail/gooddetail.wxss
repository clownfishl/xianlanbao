/* pages/index/gooddetail/gooddetail.wxss */
.icon-star:before{content:'\e66b';color:#ffcc00;}
page{
  height:100%;
  width:100%;
}
.contain{
  width:100%;
  height:100%;
  background:#fff;
  box-sizing: border-box;
}
.detail-list{
  width:100%;
  padding:0 2.5%;
  border-bottom: 1rpx solid #eee;
  background:#fff;
  box-sizing:border-box;
}
.detail-list .first{
  width:100%;
  padding:15rpx 0;
  box-sizing:border-box;
}
.detail-list .first>view:first-child{
  line-height:65rpx;
  padding-left:15rpx;
  margin-bottom:10rpx;
}
.detail-list .first>view:first-child .name{
  display:inline-block;
  width:244rpx;
  font-size:32rpx;
  color:black;
  font-weight:bold;
  letter-spacing: 2rpx;
}
.detail-list .first>view:first-child .category{
  font-size:32rpx;
  color:blank;
  font-weight:bold;
  letter-spacing:2rpx;
}
.detail-list .deep_detail{
  display: flex;
  flex-direction: column;
  width:100%;
  height:145rpx;
  padding:20rpx 20rpx;
  font-size:30rpx;
  border-radius: 14rpx;
  border:1rpx solid #f8f8fa;
  box-sizing: border-box;
}
.detail-list .deep_detail>view:nth-child(2) view{
  width:50%;
  display:inline-block;
}
.detail-list .deep_detail text{
  display:inline-block;
  width:50%;
  font-size:31rpx;
  color:blank;
  letter-spacing:2rpx;
}
.detail-list .deep_detail .vm{
  display:inline-block;
}
.detail-list .deep_detail .price{
  color:#0079c2;
}

